Apache Sqoop

##### sqoop list-databases #####

sqoop list-databases \
--connect "jdbc:mysql://quickstart.cloudera:3306" \
--username retail_dba \
--password cloudera

##### sqoop list-tables #####

sqoop list-tables \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--passwrod cloudera

##### sqoop eval #####

sqoop eval \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--query "select count(1) from order_items"

##### import-all-tables #####

sqoop import-all-tables \
-m 12 \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--as-avrodatafile \
--warehouse-dir=/user/cloudera/sqoop_import

##### import-all-tables in hive #####

sqoop import-all-tables \
-m 1 \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--hive-import \
--hive-overwrite \
--create-hive-table \
--compress \
--compression-codec org.apache.hadoop.io.compress.SnappyCodec \
--outdir java_files

##### import-all-tables in hive specific database #####

sqoop import-all-tables \
-m 1 \
--connect "jdbc:mysql://quickstart.cloudera:3306:/retail_db" \
--username retail_dba \
--password cloudera \
--hive-import \
--hive-overwrite \
--create-hive-table \
--outdir java files \
--hive-database retail_stage

##### sqoop import #####

sqoop import \
--connect "jdbc:/mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--as-textfile
--target-dir /user/cloudera/departments

##### sqoop import boundary query #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--target-dir /user/cloudera/departments \
--boundary-query "select 2,7 from departments limit 1"
--columns department_id,department_name

##### sqoop import split-by and query #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--query = "select * from orders join order_items on orders.order_id = order_items.order_item_order_id where \$CONDITIONS" \
--target-dir /user/cloudera/order_join \
--split-by order_id \
--num-mappers 4

##### sqoop import using where #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--usernane retail_dba \
--password cloudera \
--target-dir /user/hive/warehouse/retail_ods.db/department \
--append \
--split-by department_id \
--where "department_id > 7" \
--outdir java_files

##### sqoop import into existing hive table #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--hive-home /user/hive/warehouse \
--hive-import \
--hive-overwrite \
--hive-table departments

##### sqoop import into new hive table #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--hive-home /user/hive/warehouse \
--hive-import \
--hive-table department_test \
--create-hive-table

##### sqoop import incremental load #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--target-dir /user/hive/warehouse/departments \
--check-column "department_id" \
--incremental append \
--last-value 7

##### sqoop export #####

sqoop export \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_db \
--password cloudera \
--table order_items_export \
--export-dir /user/cloudera/sqoop_import/order_items \
--batch 

##### sqoop export using update or upsert mode #####

sqoop export \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--usernmae retail_dba \
--password cloudera \
--table departments \
--export-dir /user/cloudera/sqoop_import/departments_export \
--batch \
--update-key department_id \
--update-mode allowinsert

##### sqoop import using enclosed by #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--target-dir /user/cloudera/enclosedby/ \
--enclosed-by \"

##### sqoop import with delimiters #####

sqoop import \
--connect "jdbc:mysql://quickstart.cloudera:3306/retail_db" \
--username retail_dba \
--password cloudera \
--table departments \
--target-dir /user/cloudera/enclosedby \
--enclosed-by \" \
--fields-terminated-by \| \
--lines-terminated-by \: 

##### sqoop export with delimiters #####

sqoop export \
--connect "jdbc:mysql://quickstart.cloudera:3306/retil_db" \
--username retail_dba \
--password cloudera \
--table departments_test \
--export-dir /user/hive/warehouse/departments_test \
--input-fields-terminated-by '\001' \
--input-lines-terminated-by '\n' \
--num-mappers 2 \
--batch \
--outdir java_files \
--input-null-string nvl \
--input-null-non-string -1

